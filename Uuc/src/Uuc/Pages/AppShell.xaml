<Shell Shell.FlyoutBehavior="Flyout"
       Title="Uuc"
       x:Class="Uuc.Pages.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:local="clr-namespace:Uuc.Pages"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate local:DashboardPage}"
        Route="dashboard" />

    <ShellContent
        Title="Accounts"
        ContentTemplate="{DataTemplate local:AccountsPage}"
        Route="accounts" />

    <ShellContent
        Title="Authorizations"
        ContentTemplate="{DataTemplate local:AuthorizationsPage}"
        Route="authorizations" />

    <ShellContent
        Title="Convert"
        ContentTemplate="{DataTemplate local:ConvertPage}"
        Route="convert" />

    <MenuItem Text="Send" Command="{Binding Send_OnClickedCommand}" />

    <MenuItem Text="Receive" Command="{Binding Receive_OnClickedCommand}" />

    <ShellContent
        Title="Digital Identities"
        ContentTemplate="{DataTemplate local:DigitalIdentitiesPage}"
        Route="digital-identities" />

    <MenuItem Text="Settings" Command="{Binding Settings_OnClickedCommand}" />

    <MenuItem Text="Exit" Command="{Binding Exit_OnClickedCommand}" />

</Shell>


