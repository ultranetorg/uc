<ContentPage x:Class="Uuc.Pages.EnterPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="EnterPasswordPage"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Entry Text="{Binding Password}" />
            <Button Command="{Binding Submit_OnClickedCommand}" Text="Enter" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
