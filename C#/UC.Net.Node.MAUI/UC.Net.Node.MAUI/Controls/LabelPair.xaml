<?xml version="1.0" encoding="UTF-8"?>
<Grid
    x:Class="UC.Net.Node.MAUI.Controls.LabelPair"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="0"
    ColumnDefinitions="*,*"
    x:Name="Instance">
    <Label
        Grid.Column="0"
        FontSize="12"
        Style="{StaticResource DashLabel}"
        Text="{Binding Text1, Source={x:Reference Instance}}" />
    <Label
        Grid.Column="1"
        HorizontalOptions="End"
        Opacity="0.7"
        FontSize="12"
        FontAttributes="Bold"
        Style="{StaticResource DashLabel}"
        Text="{Binding Text2, Source={x:Reference Instance}}" />
</Grid>