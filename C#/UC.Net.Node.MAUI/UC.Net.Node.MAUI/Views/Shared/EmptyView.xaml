<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="UC.Net.Node.MAUI.Controls.EmptyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fi="clr-namespace:UC.Net.Node.MAUI.Models"
    x:Name="emptyview">
    <StackLayout Spacing="10" VerticalOptions="CenterAndExpand">
        <Image
            HeightRequest="100"
            HorizontalOptions="Center"
            Source="{FontImage Color=Gray, FontFamily=Material, Size=60, Glyph={x:Static fi:MaterialIconFont.Error}}"
            WidthRequest="100" />
        <Label
            FontSize="17"
            HorizontalOptions="Center"
            Text="{Binding Text, Source={x:Reference emptyview}}" />
    </StackLayout>
</ContentView>