<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="UC.Net.Node.MAUI.Controls.SwitchView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="instance"
    BackgroundColor="Transparent"
    HorizontalOptions="Center"
    SizeChanged="Instance_SizeChanged">
    <Frame
        x:Name="frame"
        Padding="4"
        BackgroundColor="Transparent"
        BorderColor="{Binding CurrentColor, Source={x:Reference instance}}"
        CornerRadius="{Binding CornerRadius, Source={x:Reference instance}}"
        HasShadow="False">
        <BoxView
            x:Name="thumb"
            BackgroundColor="{Binding CurrentColor, Source={x:Reference instance}}"
            CornerRadius="{Binding CornerRadius, Source={x:Reference instance}}"
            VerticalOptions="FillAndExpand" />
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding SwitchCommand, Source={x:Reference instance}}" />
        </Frame.GestureRecognizers>
    </Frame>
</ContentView>