<?xml version="1.0" encoding="utf-8" ?>
<controls:CustomPage
    x:Class="UC.Umc.Pages.TransactionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    Title="Transactions"
    x:Name="page">
    <!--<controls:CustomPage.RightContent>
        <StackLayout>
            <ImageButton
                HorizontalOptions="End"
                Style="{StaticResource Sort}"
                VerticalOptions="Center" />
        </StackLayout>
    </controls:CustomPage.RightContent>-->
    <controls:CustomPage.MainContent>
        <Grid Padding="20,0" RowDefinitions="Auto,*">
            <AbsoluteLayout Grid.Row="0">
                <controls:BorderEntry
                    AbsoluteLayout.LayoutBounds="0,1,1,1"
                    AbsoluteLayout.LayoutFlags="All" />
                <Image
                    Margin="10,0"
                    AbsoluteLayout.LayoutBounds="1,0.5,-1,-1"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    HorizontalOptions="End"
                    Style="{StaticResource SearchIcon}"
                    VerticalOptions="Center" />
            </AbsoluteLayout>
            <CollectionView
                Grid.Row="1"
                SelectionMode="None"
                ItemsSource="{Binding Transactions}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Border
                                Margin="0,5"
                                Style="{StaticResource TransactionCard}">
                                <Grid
                                    Padding="5"
                                    ColumnDefinitions="56,*,Auto"
                                    ColumnSpacing="15"
                                    HeightRequest="56"
                                    RowDefinitions="27,27"
                                    RowSpacing="6">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.ItemTappedCommand, Source={x:Reference page}}" CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                    <Image
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        HeightRequest="30"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Source="{Binding Status, Converter={StaticResource TransactionStatusToIconConverter}}"
                                        WidthRequest="30" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="11"
                                        Text="{Binding Name}"
                                        VerticalOptions="End" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        FontSize="10"
                                        Opacity="0.4"
                                        Text="{Binding Date}"
                                        VerticalOptions="Start" />
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        FontSize="11"
                                        Text="{Binding Unt, StringFormat='{0} UNT'}"
                                        VerticalOptions="End" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        FontSize="10"
                                        Opacity="0.4"
                                        Text="{Binding USD, StringFormat='${0}'}"
                                        VerticalOptions="Start" />
                                </Grid>
                            </Border>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </controls:CustomPage.MainContent>
</controls:CustomPage>
