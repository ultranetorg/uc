<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="UC.Umc.Views.AuthorRegistration2View"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UC.Umc.Views"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    x:Name="view">
    <StackLayout Padding="5" Spacing="30">
        <StackLayout>
            <Label FontSize="18" Text="Do you confirm registration of this author?" />
            <Label
                FontSize="13"
                Style="{StaticResource Regular}"
                Text="Clicking 'Confirm' button, registration will start" />
        </StackLayout>
        <StackLayout Spacing="20">
            <controls:LabelPair Text1="Registering Author:" Text2="UltRAnet ORG" />
            <controls:LabelPair Text1="With name:" Text2="ultranetorg" />
            <controls:LabelPair Text1="With price:" Text2="500 UNT ($220)" />
        </StackLayout>
        <StackLayout>
            <Label Style="{StaticResource DashLabel}" Text="From Account" />
            <views:AccountView Grid.ColumnSpan="2" BindingContext="{Binding Wallet}">
                <views:AccountView.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SelectAccountCommand}" />
                </views:AccountView.GestureRecognizers>
            </views:AccountView>
        </StackLayout>
    </StackLayout>
</ContentView>