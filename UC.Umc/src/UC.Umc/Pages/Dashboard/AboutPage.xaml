<views:CustomPage
    x:Class="UC.Umc.Pages.Dashboard.AboutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UC.Umc.Views"
    xmlns:dashboard="clr-namespace:UC.Umc.ViewModels.Dashboard"
    x:DataType="dashboard:AboutViewModel"
    Title="About">
    <views:CustomPage.Resources>
        <Style x:Key="DetailsGrid" TargetType="Grid">
            <Setter Property="ColumnDefinitions" Value="*,24" />
            <Setter Property="RowDefinitions" Value="24,16,8" />
        </Style>
    </views:CustomPage.Resources>
    
    <views:CustomPage.MainContent>
        <Grid RowDefinitions="*,Auto" Padding="24">
            <StackLayout Spacing="16">
                <Border
                    Grid.ColumnSpan="2"
                    HeightRequest="74"
                    Style="{StaticResource AccountCardBorderDark}">
                    <Grid
                        Padding="20,4"
                        ColumnDefinitions="32,*"
                        ColumnSpacing="24"
                        RowDefinitions="Auto,Auto"
                        VerticalOptions="Center">
                        <Image
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            HeightRequest="32"
                            Style="{StaticResource Logo3}"
                            Source="logo3_dark.png"
                            VerticalOptions="Center"
                            WidthRequest="32" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="14"
                            Text="Ultranet User Center"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="12"
                            Opacity="0.6"
                            Text="1.0.1 build 6941"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>
                <StackLayout>
                    <StackLayout>
                        <Grid Style="{StaticResource DetailsGrid}">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Ultranet.org"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Ultranet homepage"
                                VerticalOptions="Start" />
                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Style="{StaticResource Globe}" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Grid Style="{StaticResource DetailsGrid}">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Rate the application"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Rate our application in App Store"
                                VerticalOptions="Start" />
                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Style="{StaticResource Star}" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Grid Style="{StaticResource DetailsGrid}">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Send feedback"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Share your feedback with us"
                                VerticalOptions="Start" />
                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Style="{StaticResource Mail}" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Grid Style="{StaticResource DetailsGrid}">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Ultranet on Telegram"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Join us in Telegram"
                                VerticalOptions="Start" />
                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Style="{StaticResource Telegram}" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Grid Style="{StaticResource DetailsGrid}">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Ultranet on Twitter"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Join us in Twitter"
                                VerticalOptions="Start" />
                            <Image
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Style="{StaticResource Twitter}" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Grid Style="{StaticResource DetailsGrid}" RowSpacing="8">
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                FontSize="14"
                                Style="{StaticResource DashLabel}"
                                Text="Bug bounty program"
                                VerticalOptions="End" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="0"
                                FontSize="12"
                                Opacity="0.6"
                                Text="Read about our Bug Bounty program"
                                VerticalOptions="Start" />
                            <StackLayout
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Style="{StaticResource StackSperator}"
                                VerticalOptions="End" />
                        </Grid>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="14"
                            Style="{StaticResource DashLabel}"
                            Text="Privacy and terms"
                            VerticalOptions="End" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            
            <Button
                Grid.Row="1"
                Command="{Binding CancelCommand}"
                Text="Close" />
        </Grid>
    </views:CustomPage.MainContent>
</views:CustomPage>
