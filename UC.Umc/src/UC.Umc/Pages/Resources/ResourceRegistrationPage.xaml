<views:CustomPage
    x:Class="UC.Umc.Pages.Resources.ResourceRegistrationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:UC.Umc.Views"
    xmlns:controls="clr-namespace:UC.Umc.Views.Controls"
    xmlns:resources="clr-namespace:UC.Umc.ViewModels.Resources"
    x:DataType="resources:ResourceRegistrationViewModel"
    Title="Product Registration"
    x:Name="page">
    <views:CustomPage.MainContent>
        <Grid
            Padding="{StaticResource PagePadding}"
            RowDefinitions="*,Auto,Auto"
            RowSpacing="30">
            <CarouselView
                Grid.Row="0"
                HorizontalScrollBarVisibility="Never"
                IndicatorView="indicator"
                IsSwipeEnabled="False"
                Loop="False"
                PeekAreaInsets="0"
                Position="{Binding Position}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <ContentView Content="{Binding .}" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
                <CarouselView.ItemsSource>
                    <x:Array Type="{x:Type View}">
                        <!--Step #1-->
                        <ScrollView>
                            <StackLayout Padding="5" Spacing="20">
                                <StackLayout>
                                    <Label FontSize="18" Text="Choose your payment account and Product title" />
                                    <Label
                                        FontSize="13"
                                        Style="{StaticResource Regular}"
                                        Text="Your need specify your source, destination accounts and amount to transfer" />
                                </StackLayout>
                                <StackLayout>
                                    <Label Style="{StaticResource DashLabel}" Text="Payment Account" />
                                    <views:AccountView
                                        Grid.ColumnSpan="2"
                                        Margin="0,4"
                                        Account="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Account}"
                                        BorderStyle="{StaticResource AccountCardBorderDark}" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=SelectAccountCommand}" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                                <StackLayout Grid.Column="0" Spacing="5">
                                    <Label Style="{StaticResource DashLabel}" Text="Title" />
                                    <Label
                                        FontSize="13"
                                        Style="{StaticResource Regular}"
                                        Text="Please specify Product name. This name will be used like an application domain" />
                                    <controls:BorderEntry Text="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Name, Mode=TwoWay}">
                                        <controls:BorderEntry.Behaviors>
                                            <toolkit:CharactersValidationBehavior
                                                x:Name="cb1"
                                                CharacterType="Letter"
                                                Flags="ValidateOnValueChanged"
                                                InvalidStyle="{StaticResource InvalidEntry}"
                                                MaximumCharacterTypeCount="30"
                                                MinimumCharacterTypeCount="1"
                                                ValidStyle="{StaticResource Valid}" />
                                        </controls:BorderEntry.Behaviors>
                                    </controls:BorderEntry>
                                </StackLayout>

                                <views:LabelPair
                                    Text1="UNT amount"
                                    Text2="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Commission}" />
                            </StackLayout>
                        </ScrollView>
                        
                        <!--Step #2-->
                        <StackLayout Padding="5" Spacing="30">
                            <StackLayout>
                                <Label FontSize="18" Text="Do you confirm registration of this product?" />
                                <Label
                                    FontSize="13"
                                    Style="{StaticResource Regular}"
                                    Text="Clicking 'Confirm' button, registration will start" />
                            </StackLayout>
                            <StackLayout Spacing="20">
                                <views:LabelPair Text1="Registering Product:" Text2="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Name}" />
                                <views:LabelPair Text1="With price:" Text2="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Commission}" />
                            </StackLayout>
                            <StackLayout>
                                <Label Style="{StaticResource DashLabel}" Text="From Account" />
                                <views:AccountView
                                    BorderStyle="{StaticResource AccountCardBorder}"
                                    Account="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=Account}"/>
                            </StackLayout>
                        </StackLayout>
                    </x:Array>
                </CarouselView.ItemsSource>
            </CarouselView>
            <IndicatorView x:Name="indicator" Grid.Row="1" />
            <controls:NextCancelButton
                Grid.Row="2"
                NextCommand="{Binding Source={RelativeSource AncestorType={x:Type resources:ResourceRegistrationViewModel}}, Path=NextWorkaroundCommand}" />
        </Grid>
    </views:CustomPage.MainContent>
</views:CustomPage>
