<?xml version="1.0" encoding="utf-8" ?>
<controls:CustomPage
    x:Class="UC.Umc.Pages.AuthorRenewalPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    xmlns:resx="clr-namespace:UC.Umc.Properties"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:UC.Umc.Views"
    xmlns:vm="clr-namespace:UC.Umc.ViewModels"
    x:DataType="vm:AuthorRenewalViewModel"
    Title="{x:Static resx:Author_Strings.Renewal_Title}"
    x:Name="page">
    
    <controls:CustomPage.MainContent>
        <Grid
            Padding="{StaticResource PagePadding}"
            RowDefinitions="*,Auto,Auto"
            RowSpacing="32">
            <CarouselView
                Grid.Row="0"
                HorizontalScrollBarVisibility="Never"
                IndicatorView="indicator"
                IsSwipeEnabled="False"
                Loop="False"
                PeekAreaInsets="0"
                Position="{Binding Position}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <ContentView Content="{Binding .}" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
                <CarouselView.ItemsSource>
                    <x:Array Type="{x:Type View}">
                        <!--Step #1-->
                        <StackLayout Padding="4" Spacing="32">
                                <StackLayout>
                                    <Label FontSize="18" Text="{x:Static resx:Author_Strings.Renewal_Period}" />
                                    <Label
                                        FontSize="13"
                                        Style="{StaticResource Regular}"
                                        Text="{x:Static resx:Author_Strings.Renewal_Period2}" />
                                </StackLayout>
                                <StackLayout>
                                    <Label Style="{StaticResource DashLabel}" Text="{x:Static resx:Author_Strings.Renewal_Author}" />
                                    <Grid ColumnDefinitions="*,36" RowSpacing="-8">
                                        <Border
                                            Grid.ColumnSpan="2"
                                            HeightRequest="60"
                                            Style="{StaticResource AccountCardBorder}">
                                            <Grid RowDefinitions="Auto,Auto">
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    FontSize="13"
                                                    Text="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Author.Name}"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    FontSize="10"
                                                    Text="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Author.ActiveDue}"
                                                    VerticalOptions="Center" />
                                            </Grid>
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=SelectAuthorCommand}" />
                                            </Border.GestureRecognizers>
                                        </Border>
                                        <Image
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            InputTransparent="True"
                                            Style="{StaticResource BottomArrowsIcon}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </StackLayout>
                                <StackLayout>
                                    <Label Style="{StaticResource DashLabel}" Text="{x:Static resx:Author_Strings.Renewal_Account}" />
                                    <Grid ColumnDefinitions="*,36" RowSpacing="-8">
                                        <views:AccountView
                                            Grid.ColumnSpan="2"
                                            BorderStyle="{StaticResource AccountCardBorderDark}"
                                            Account="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Account}">
                                            <views:AccountView.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=SelectAccountCommand}" />
                                            </views:AccountView.GestureRecognizers>
                                        </views:AccountView>
                                        <Image
                                            Grid.Column="1"
                                            HorizontalOptions="Center"
                                            InputTransparent="True"
                                            Style="{StaticResource BottomArrowsIcon}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </StackLayout>
                                <StackLayout Spacing="16">
                                    <Grid ColumnDefinitions="*,*">
                                        <Label
                                            Grid.Column="0"
                                            Style="{StaticResource DashLabel}"
                                            Text="{x:Static resx:Author_Strings.Renewal_Period3}"
                                            VerticalOptions="Center" />
										<controls:BorderEntry
                                            HorizontalOptions="End"
                                            Keyboard="Numeric"
                                            Text="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Period}"
                                            Grid.Column="1"
                                            FontSize="13">
                                            <controls:BorderEntry.Behaviors>
                                                <toolkit:CharactersValidationBehavior
                                                    x:Name="cb2"
                                                    CharacterType="Letter"
                                                    Flags="ValidateOnValueChanged"
                                                    InvalidStyle="{StaticResource InvalidEntry}"
                                                    MaximumCharacterTypeCount="30"
                                                    MinimumCharacterTypeCount="1"
                                                    ValidStyle="{StaticResource Valid}" />
                                            </controls:BorderEntry.Behaviors>
                                        </controls:BorderEntry>
                                    </Grid>
                                    <controls:LabelPair
                                        Text1="{x:Static resx:Author_Strings.Renewal_EstimatedEndDate}"
                                        Text2="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=EstimatedDate}" />
                                    <controls:LabelPair
                                        Text1="{x:Static resx:Author_Strings.Renewal_EstimatedComission}"
                                        Text2="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Comission}" />
                                </StackLayout>
                            </StackLayout>
                        
                        <!--Step #2-->
                        <StackLayout Padding="4" Spacing="32">
                            <StackLayout>
                                <Label FontSize="18" Text="{x:Static resx:Author_Strings.Renewal_Confirm}" />
                                <Label
                                    FontSize="13"
                                    Style="{StaticResource Regular}"
                                    Text="{x:Static resx:Author_Strings.Renewal_Confirm2}" />
                            </StackLayout>
                            <StackLayout Spacing="20">
                                <controls:LabelPair
                                    Text1="{x:Static resx:Author_Strings.Renewal_Summary}"
                                    Text2="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Author.Title}" />
                                <controls:LabelPair
                                    Text1="{x:Static resx:Author_Strings.Renewal_Summary2}"
                                    Text2="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Comission}" />
								<controls:LabelPair
                                    Text1="{x:Static resx:Author_Strings.Renewal_Summary3}"
                                    Text2="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Period}" />
                            </StackLayout>
                            <StackLayout>
                                <Label Style="{StaticResource DashLabel}" Text="{x:Static resx:Author_Strings.Renewal_Summary4}" />
                                <views:AccountView
                                    BorderStyle="{StaticResource AccountCardBorder}"
                                    Account="{Binding Source={RelativeSource AncestorType={x:Type vm:AuthorRenewalViewModel}}, Path=Account}"/>
                            </StackLayout>
                        </StackLayout>
                    </x:Array>
                </CarouselView.ItemsSource>
            </CarouselView>
            <IndicatorView x:Name="indicator" Grid.Row="1" />
            <controls:NextCancelButton
				Grid.Row="2"
				NextCommand="{Binding NextWorkaroundNewCommand}"
				CancelCommand="{Binding CancelCommand}"  />
        </Grid>
    </controls:CustomPage.MainContent>
</controls:CustomPage>
