<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="UC.Umc.Views.Send2View"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    xmlns:resx="clr-namespace:UC.Umc.Properties"
    xmlns:views="clr-namespace:UC.Umc.Views"
    x:Name="This">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="20" BindingContext="{x:Reference This}">
        <StackLayout Grid.Row="0">
            <Label FontSize="18" Text="{x:Static resx:Transaction_Strings.Send_Confirm}" />
            <Label
                FontSize="13"
                Style="{StaticResource Regular}"
                Text="{x:Static resx:Transaction_Strings.Send_Confirm2}" />
        </StackLayout>
            
        <StackLayout Grid.Row="1">
            <Label Style="{StaticResource DashLabel}" Text="{x:Static resx:Transaction_Strings.Send_From}" />
            <views:AccountView
                BorderStyle="{StaticResource AccountBorder}"
                Account="{Binding SourceAccount}" />
        </StackLayout>
            
        <StackLayout Grid.Row="2">
            <Label Style="{StaticResource DashLabel}" Text="{x:Static resx:Transaction_Strings.Send_To}" />
            <Border Padding="24" Style="{StaticResource AccountCardBorder}">
                <Label
                    FontSize="12"
                    Style="{StaticResource Medium}"
                    Text="{Binding RecipientAccount.Address}" />
            </Border>
        </StackLayout>
            
        <StackLayout Grid.Row="3" Spacing="15">
            <controls:LabelPair
                Text1="{x:Static resx:Transaction_Strings.Send_Amount}"
                Text2="{Binding Amount, StringFormat='{0} UNT'}" />
            <controls:LabelPair
                Text1="{x:Static resx:Transaction_Strings.Send_Comission}"
                Text2="{Binding Comission, StringFormat='{0} UNT'}" />
        </StackLayout>
    </Grid>
</ContentView>