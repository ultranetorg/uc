<?xml version="1.0" encoding="UTF-8"?>
<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="instance"
    x:Class="UC.Umc.Controls.ImageTextColumn"
    Padding="0"
    ColumnDefinitions="30,*">
    <ImageButton
        Grid.Column="0"
        IsEnabled="{Binding IsEnabledImage, Source={x:Reference instance}}"
        Style="{StaticResource Check}" />
    <Label
        Grid.Column="1"
        FontSize="13"
        Style="{StaticResource SubText}"
        Text="{Binding Text, Source={x:Reference instance}}}"
        VerticalOptions="Center">
        <Label.Triggers>
            <DataTrigger
                TargetType="Label"
                Binding="{Binding IsEnabledImage, Source={x:Reference instance}}"
                Value="True">
                <Setter Property="TextColor" Value="{StaticResource Primary}" />
            </DataTrigger>
        </Label.Triggers>
    </Label>
</Grid>