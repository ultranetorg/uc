<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="UC.Umc.Views.Send1View"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    xmlns:resx="clr-namespace:UC.Umc.Properties"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:UC.Umc.Views"
    x:Name="This">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="16" BindingContext="{x:Reference This}">
        <StackLayout Grid.Row="0">
            <Label FontSize="18" Text="{x:Static resx:Transaction_Strings.Send_Specify}" />
            <Label
                FontSize="13"
                Style="{StaticResource Regular}"
                Text="{x:Static resx:Transaction_Strings.Send_Specify2}" />
        </StackLayout>
            
        <StackLayout Grid.Row="1">
            <Label
                Style="{StaticResource DashLabel}"
                Text="{x:Static resx:Transaction_Strings.Send_Source}" />
            <Label
                FontSize="13"
                Style="{StaticResource Regular}"
                Text="{x:Static resx:Transaction_Strings.Send_Source2}" />
            <views:AccountView
                BorderStyle="{StaticResource AccountCardBorderDark}"
                Margin="0,8"
                Account="{Binding SourceAccount}" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SelectSourceAccount}" />
            </StackLayout.GestureRecognizers>
        </StackLayout>
            
        <StackLayout Grid.Row="2">
            <Label
                Style="{StaticResource DashLabel}"
                Text="{x:Static resx:Transaction_Strings.Send_Recipient}" />
            <Label
                FontSize="13"
                Style="{StaticResource Regular}"
                Text="{x:Static resx:Transaction_Strings.Send_Recipient2}" />
            <views:AccountView
                BorderStyle="{StaticResource AccountCardBorderDark}"
                Margin="0,8"
                Account="{Binding RecipientAccount}" />
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding SelectRecipientAccount}" />
            </StackLayout.GestureRecognizers>
        </StackLayout>
    </Grid>
</ContentView>