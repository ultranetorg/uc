<?xml version="1.0" encoding="UTF-8"?>
<StackLayout 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resx="clr-namespace:UC.Umc.Properties"
    x:Class="UC.Umc.Controls.NextCancelButton"
    x:Name="instance">
    <Button
        Command="{Binding NextCommand, Source={x:Reference instance}}"
        Style="{StaticResource NextButton}" />
    <Button
        Command="{Binding CancelCommand, Source={x:Reference instance}}"
        Style="{StaticResource LabelButton}" Text="{x:Static resx:Additional_Strings.Button_Cancel}" />
</StackLayout>