            <Grid
                ColumnDefinitions="*,*,*"
                RowDefinitions="*,*,*,*"
                RowSpacing="40"
                VerticalOptions="EndAndExpand">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="1"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="2"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="3"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="4"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="5"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="6"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="7"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="8"
                    VerticalOptions="Center" />
                <Label
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="9"
                    VerticalOptions="Center" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="0"
                    Padding="1"
                    HeightRequest="32"
                    HorizontalOptions="Center"
                    Style="{StaticResource Backspace}"
                    VerticalOptions="Center"
                    WidthRequest="32" />
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalOptions="Center"
                    Style="{StaticResource NumberLabel}"
                    Text="0"
                    VerticalOptions="Center" />
                <ImageButton
                    Grid.Row="3"
                    Grid.Column="2"
                    Padding="1"
                    HeightRequest="32"
                    HorizontalOptions="Center"
                    Style="{StaticResource LogOut}"
                    VerticalOptions="Center"
                    WidthRequest="32" />
            </Grid>
        </StackLayout>
    </Frame>
