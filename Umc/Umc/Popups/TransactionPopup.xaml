<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="UC.Umc.Popups.TransactionPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:const="clr-namespace:UC.Umc.Constants"
    xmlns:controls="clr-namespace:UC.Umc.Controls"
    xmlns:resx="clr-namespace:UC.Umc.Properties"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:UC.Umc.Views"
    xmlns:vm="clr-namespace:UC.Umc.ViewModels.Popups"
    CanBeDismissedByTappingOutsideOfPopup="True"
    Color="Transparent"
    Size="{x:Static const:SizeConstants.ExtraMedium}"
    VerticalOptions="End"
    x:Name="page"
    x:DataType="vm:TransactionDetailsViewModel">
    <Border
        Padding="24,12"
        Style="{StaticResource AccountCardBorder}">
        <StackLayout HorizontalOptions="Fill" Spacing="16">
            <Grid RowDefinitions="12,Auto,24" RowSpacing="16">
                <Border
                    Grid.Row="0"
                    HorizontalOptions="Center"
                    Style="{StaticResource PopupHandleBorder}" />
                <Label
                    Grid.Row="1"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="{x:Static resx:Additional_Strings.Transaction_Title}" />
                <Label
                    Grid.Row="2"
                    FontSize="12"
                    HorizontalOptions="Center"
                    Text="{Binding Transaction.Name}" />
            </Grid>
            <views:AccountView
                Grid.Row="2"
                Account="{Binding Account}"
                BorderStyle="{StaticResource AccountCardBorderDark}" />
            <StackLayout>
                <Label
                    Style="{StaticResource DashLabel}"
                    Text="{x:Static resx:Additional_Strings.Transaction_Hash}" />
                <Label
                    Style="{StaticResource DashLabelValue}"
                    Text="{Binding Transaction.Hash}" FontSize="11" />
            </StackLayout>
            <controls:LabelPair
                Text1="{x:Static resx:Additional_Strings.Transaction_DateAndTime}"
                Text2="{Binding Transaction.Date, StringFormat='{0:MM/dd/yyyy hh:mm}'}" />
            <controls:LabelPair
                Text1="{x:Static resx:Additional_Strings.Transaction_Status}"
                Text2="{Binding Transaction.DisplayStatus}" />
            <controls:LabelPair
                Text1="{x:Static resx:Additional_Strings.Transaction_Size}"
                Text2="{Binding Transaction.Size}" />
            <controls:LabelPair
                Text1="{x:Static resx:Additional_Strings.Transaction_Confirmations}"
                Text2="{Binding Transaction.Confirmations}" />
            
            <Button
                Style="{StaticResource CopyHashButton}"
                Text="{x:Static resx:Additional_Strings.Transaction_CopyHash}"
                Command="{Binding CopyHashCommand}"/>
        </StackLayout>
    </Border>
</toolkit:Popup>